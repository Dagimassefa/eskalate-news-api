{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"lib": ["ES2022"],
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["*"]
		},
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"types": ["node", "jest"]
	},
	"include": ["src", "prisma"],
	"exclude": ["node_modules", "dist"]
}
